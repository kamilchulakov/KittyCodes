<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Search">

        <SwitchPreferenceCompat
            app:key="translatorUsage"
            app:title="Use text-to-code translator"
            app:summary="Examples:\nloading->102\nok->200\nlaba->204\nse->599"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="UI">

        <SwitchPreferenceCompat
            app:key="suggestionsVisibility"
            app:title="Show Suggestions" />

        <SwitchPreferenceCompat
            app:key="exitVisibility"
            app:title="Show EXIT button" />

    </PreferenceCategory>

</PreferenceScreen>